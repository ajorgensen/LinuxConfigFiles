alias ll='ls -lh'
alias la='ls -Ah'
alias l='ls -CFh'
alias inst='sudo apt-get install -y $1'
alias remp='sudo apt-get remove'
alias search='apt-cache search $1'
alias psx="ps aux | grep $1"
alias df='df -h'
alias ppakey='sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys $1'
alias ..='cd ..'
alias ud='sudo apt-get update'
alias ug='sudo apt-get -y upgrade'
alias wget='wget -c'
alias cleanup='sudo apt-get autoremove && sudo apt-get autoclean'
alias vi='vim'
